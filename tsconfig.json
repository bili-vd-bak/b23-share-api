{
  "compilerOptions": {
    "rootDir": "./",
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "package.json"
  ],
  "rootDir": ".",
  "resolveJsonModule": true,
  "esModuleInterop": true,
}